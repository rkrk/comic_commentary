
<h1 class="pageTitle"> Translate Status </h1>

<div class="row" >

	<h2>Target Vol</h2>
	<p><%=@comic_name%> - <%=@vol%> </p>

	<hr>

	<h2> Page Translate Status </h2>
	<table class="table table-striped table-condensed">
		<tr> <td>#</td> <td>page</td> <td>status</td> </tr>
		<% @trans_status.each_index do |i| %>
			<% page,ts = @trans_status[i] %>
			<tr>
				<td><%= i + 1 %></td>
				<td> <a href= <%= "/trans/#{@comic_name}/#{@vol}/#{page}" %> ><%= page %></a> </td>
				<td><%= ts == 1 ? "Done" : "Not yet "  %></td>
			</tr>
		<% end %>

		<tr> 
			<td></td>
			<td></td>
			<form action="/trans/comit" method="POST">
				<td class="span2"><input class="span2 btn btn-success" span="2" type="submit" value="Translate Commit"></td>
			</form>

		</tr>
	</table>

	<hr>

</div>