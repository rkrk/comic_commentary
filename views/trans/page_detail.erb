<h1 class="pageTitle"> Translate Job </h1>

<div class="row" >

	<h2>Target img</h2>
	<div id="image">
		<img id="image" src=<%="../../../pic/#{@comic_name}/#{@vol}/#{@page}.png"%>>
	</div>

	<hr>

	<h2> Translate Status - now - </h2>
	<table class="table table-striped table-bordered table-condensed">
		<tr> 
			<td> Img attr</td>
			<td></td> 
			<td> <%= @@trans_a_page.img.to_s %></td>
		</tr>
		<% @@trans_a_page.trans_record.each_index do |i|%>
			<tr>
				<td> Trans record </td> 
				<td> <%= i+1 %> </td> 
				<td> <%= @@trans_a_page.trans_record[i].to_s %> </td>
			</tr>
		<% end %>
	</table>

	<hr>

	<h2>Translate aid </h2>
	<div class="span10">

	<form action='/trans/set/img' method="POST" >
		<table id="image_attr" class="table table-striped table-bordered table-condensed">
			<tr>
				<td>Comic Name</td>
				<td>Vol</td>
				<td>Pic-name</td>
				<td>Width</td>
				<td>Height</td>
				<td>Suffix</td>
				<td></td>
			</tr>
			<tr>
				<td><input class="span3" name="comic_name" type="text" value="<%=@comic_name%>"> </td>
				<td><input class="span1" name="vol" type="text"value="<%=@vol%>"> </td>
				<td><input class="span2" name="page" type="text" value="<%=@page%>"> </td>
				<td id="pic-width"> </td>
				<td id="pic-height"> </td>
				<td><input class="span1" name="suffix" type="text" value="png"> </td>
				<td><input class="span2 btn btn-primary" type="submit" value="SetImg"></td>
			</tr>
		</table>
	</form>

	<form action='/trans/add/transrecord' method="POST" >
		<table id="trans_record_form" class="table table-striped table-bordered table-condensed">
			<tr>
				<td>Translate-Content</td>
				<td>Font-size</td>
				<td>X</td>
				<td>Y</td>
				<td>text_align</td>
			</tr>
			<tr id="trans_record">
				<td><input class="span5" name="content" type="text" value=""> </td>
				<td><input class="span1" name="font_size" type="text" value=""> </td>
				<td id="cood-x" > <input class="span1" name="x"></td>
				<td id="cood-y" > <input class="span1" name="y"></td>
				<td><input class="span1" name="text_align" type="text" value="left"> </td>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td><input class="btn btn-primary" type="submit" value="Save TransRecord" > </td>
			</tr>
		</table>
	</form>
	
		<table class="table" >
			<tr> 
				<form action="/trans/clear" method="POST">  
					<td class="span2"><input class="span2 btn btn-warning" span="1" type="submit" value="Clear"></td>  
				</form>
				<td></td><td></td>
				<form action="/trans/save" method="POST">
					<td class="span2"><input class="span2 btn btn-success" span="1" type="submit" value="Save"></td>
				</form>
				
			</tr>
		</table>
	</div>
</div>

