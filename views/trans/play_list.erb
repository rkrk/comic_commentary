<div>
	<%= @@trans_comics %><br>
	<%= @@trans_vols %><br>
	<%= @@trans_pages%><br>
	<%= @@trans_pages_trans_status %><br>
	<%= @@play_list.play_list %>

	<h3>play list -now-</h3>
	<table class="table table-striped table-bordered table-condensed">
		<tr> 
			<td> PlayList Base</td>
			<td colspan=4> <%= @@play_list.to_s %></td>
		</tr>
	
		<tr>
			<td class="span2"> # </td>
			<td class="span3"> PL title </td> 
			<td class="span1"> from </td> 
			<td class="span1"> to </td>
			<td class="span1"> </td>
		</tr>
		
		<% @@play_list.play_list.each_index do |i|%>
			<tr>
				<td ><%= i+1 %></td>
				<td><%= pl[i][0] %></td>
				<td><%= pl[i][1] %></td>
				<td><%= pl[i][2] %></td>
				<td>
					<a href="/trans/play_list/remove/<%=i%>"><i class="icon-remove"></i></a>
				</td>
			</tr>
		<% end %>
	</table>


	<hr>
	<h3>PlayList base</h3>
	<table>
		<tr>
			<td>Comic name</td>
			<td>Vol</td>
			<td>Page num(totle)</td>
		</tr>
		<tr>
			<td> <input type="text" name="" value=""></td>
			<td> <input type="text" name="" value=""></td>
			<td> <input type="text" name="" value=""></td>
		</tr>
	</table>
	<hr>
	<h3>Create List</h3>
	<table>
		<tr>
			<td>Title</td>
			<td>Page from</td>
			<td>Page to</td>
		</tr>
		<tr>
			<td> <input type="text" name="" value=""></td>
			<td> <input type="text" name="" value=""></td>
			<td> <input type="text" name="" value=""></td>
			<td> <a href="#" class="btn btn-primary">add list</a></td>
		</tr>
	</table>



	<h3>Vol-Pages</h3>
	<table>
		<tr> 
			<td>#</td>
			<td>page</td>
			<td></td>
		</tr>
		<% @@trans_pages.each do |k,v| %>
			<!-- <%= k.split("/")[-2] %> -->
			<!-- <%= k.split("/")[-1] %> -->
			<% v.each_index do |i| %>
				<tr> 
					<td><input type="text" name="" value="<%= i+1 %>"></td>
					<td><%= v[i]%></td>
				</tr>
			<% end %>
		<% end %>
		<tr>
			<td></td>
			<td><a href="#" class="btn btn-primary">Set pages</a></td>
		</tr>
	</table>

	<table class="table" >
		<tr> 
			<form action="/trans/pl/clear" method="POST">  
				<td class="span2"><input class="span2 btn btn-warning" span="1" type="submit" value="Clear"></td>  
			</form>
			<td></td><td></td>
			<form action="/trans/pl/save" method="POST">
				<td class="span2"><input class="span2 btn btn-success" span="1" type="submit" value="Save PlayList"></td>
			</form>
			
		</tr>
	</table>

</div>

