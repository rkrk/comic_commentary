<div>
<!-- 	<%= @@trans_comics %><br>
	<%= @@trans_vols %><br>
	<%= @@trans_pages%><br>
	<%= @@trans_pages_trans_status %><br>
	<%= @@play_list.play_list %> -->

	<h3>play list -now-</h3>
	<table class="table table-striped table-bordered table-condensed">
		<tr> 
			<td> PlayList Base</td>
			<td colspan=4> <%= @@play_list %></td>
		</tr>
		<tr> 
			<td> Pages</td>
			<td colspan=4> <%= @@play_list.pages.to_s %></td>
		</tr>
		<tr>
			<td class="span2"> # </td>
			<td class="span3"> PL title </td> 
			<td class="span1"> from </td> 
			<td class="span1"> to </td>
			<td class="span1"> </td>
		</tr>
		
		<% @@play_list.play_list.each_index do |i|%>
			<tr>
				<td ><%= i+1 %></td>
				<td><%= @@play_list.play_list[i][0] %></td>
				<td><%= @@play_list.play_list[i][1] %></td>
				<td><%= @@play_list.play_list[i][2] %></td>
				<td>
					<a href="/trans/play_list/remove/<%=i%>"><i class="icon-remove"></i></a>
				</td>
			</tr>
		<% end %>
	</table>


	<hr>
	<h3>PlayList base</h3>
	<form action="/trans/play_list/setbase" method="POST">
	<table>
		<tr>
			<td>Comic name</td>
			<td>Vol</td>
			<td>Page num(totle)</td>
			<td></td>
		</tr>
		<tr>
			<td> <input type="text" name="comic_name" value=""></td>
			<td> <input type="text" name="vol" value=""></td>
			<td> <input type="text" name="p_total" value=""></td>
			<td> <input class="span2 btn btn-primary" span="1" type="submit" value="set base"></td>
		</tr>
	</table>
	</form>

	<hr>
	<h3>Add List</h3>
	
	<form action="/trans/play_list/addlist" method="POST">
		<table>
			<tr>
				<td>Title</td>
				<td>Page from</td>
				<td>Page to</td>
			</tr>
			<tr>
				<td> <input type="text" name="title" value=""></td>
				<td> <input type="text" name="p_from" value=""></td>
				<td> <input type="text" name="p_to" value=""></td>
				<td> <input class="span2 btn btn-primary" span="1" type="submit" value="add pl"></td>
			</tr>
		</table>
	</form>

	<h3>Vol-Pages</h3>

	
	<form action="/trans/play_list/setpage" method="POST">
	<table>
		<tr> 
			<td>#</td>
			<td>page</td>
			<td></td>
		</tr>
		<% @@trans_pages.each do |k,v| %>
			<!-- <%= k.split("/")[-2] %> -->
			<!-- <%= k.split("/")[-1] %> -->
			<tr class="data-detail">
				<td><input type="text" name="pages" value=<%=v.to_json%>></td>
			</tr>
			<% v.each_index do |i| %>
				<tr> 
					<td><input type="text" name="" value="<%= i+1 %>"></td>
					<td><%= v[i]%></td>
				</tr>
			<% end %>
		<% end %>
		<tr>
			<td></td>
			<td><input class="span2 btn btn-primary" type="submit" value="set pages"></td>
		</tr>
	</table>
	</form>


	<table class="table" >
		<tr> 
			<form action="/trans/play_list/clear" method="POST">  
				<td class="span2"><input class="span2 btn btn-warning" span="1" type="submit" value="Clear"></td>  
			</form>
			<td></td><td></td>
			<form action="/trans/play_list/save" method="POST">
				<td class="span2"><input class="span2 btn btn-success" span="1" type="submit" value="Save PlayList"></td>
			</form>
			
		</tr>
	</table>

</div>

